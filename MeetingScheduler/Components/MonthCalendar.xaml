<UserControl x:Class="MeetingScheduler.Components.MonthCalendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeetingScheduler.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid x:Name="monthGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="D" Grid.Column="0"/>
        <TextBlock Text="S" Grid.Column="1"/>
        <TextBlock Text="T" Grid.Column="2"/>
        <TextBlock Text="Q" Grid.Column="3"/>
        <TextBlock Text="Q" Grid.Column="4"/>
        <TextBlock Text="S" Grid.Column="5"/>
        <TextBlock Text="S" Grid.Column="6"/>

        <Button Grid.Column="0" Grid.Row="1" Margin="5"/>
        <Button Grid.Column="1" Grid.Row="1" Margin="5"/>
        <Button Grid.Column="2" Grid.Row="1" Margin="5"/>
        <Button Grid.Column="3" Grid.Row="1" Margin="5"/>
        <Button Grid.Column="4" Grid.Row="1" Margin="5"/>
        <Button Grid.Column="5" Grid.Row="1" Margin="5"/>
        <Button Grid.Column="6" Grid.Row="1" Margin="5"/>

        <Button Grid.Column="0" Grid.Row="2" Margin="5"/>
        <Button Grid.Column="1" Grid.Row="2" Margin="5"/>
        <Button Grid.Column="2" Grid.Row="2" Margin="5"/>
        <Button Grid.Column="3" Grid.Row="2" Margin="5"/>
        <Button Grid.Column="4" Grid.Row="2" Margin="5"/>
        <Button Grid.Column="5" Grid.Row="2" Margin="5"/>
        <Button Grid.Column="6" Grid.Row="2" Margin="5"/>

        <Button Grid.Column="0" Grid.Row="3" Margin="5"/>
        <Button Grid.Column="1" Grid.Row="3" Margin="5"/>
        <Button Grid.Column="2" Grid.Row="3" Margin="5"/>
        <Button Grid.Column="3" Grid.Row="3" Margin="5"/>
        <Button Grid.Column="4" Grid.Row="3" Margin="5"/>
        <Button Grid.Column="5" Grid.Row="3" Margin="5"/>
        <Button Grid.Column="6" Grid.Row="3" Margin="5"/>

        <Button Grid.Column="0" Grid.Row="4" Margin="5"/>
        <Button Grid.Column="1" Grid.Row="4" Margin="5"/>
        <Button Grid.Column="2" Grid.Row="4" Margin="5"/>
        <Button Grid.Column="3" Grid.Row="4" Margin="5"/>
        <Button Grid.Column="4" Grid.Row="4" Margin="5"/>
        <Button Grid.Column="5" Grid.Row="4" Margin="5"/>
        <Button Grid.Column="6" Grid.Row="4" Margin="5"/>

        <Button Grid.Column="0" Grid.Row="5" Margin="5"/>
        <Button Grid.Column="1" Grid.Row="5" Margin="5"/>
        <Button Grid.Column="2" Grid.Row="5" Margin="5"/>
        <Button Grid.Column="3" Grid.Row="5" Margin="5"/>
        <Button Grid.Column="4" Grid.Row="5" Margin="5"/>
        <Button Grid.Column="5" Grid.Row="5" Margin="5"/>
        <Button Grid.Column="6" Grid.Row="5" Margin="5"/>
    </Grid>
    </Grid>
</UserControl>
